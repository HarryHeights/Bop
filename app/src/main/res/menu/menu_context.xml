<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kure.musicplayer.MainActivity">

    <!-- This is the context menu (appears when the user presses
         the menu button).
         
         Highlight for the `orderInCategory=100`.
     -->


    <!-- This item is only visible if we started
         playing something -->
    <item
        android:id="@+id/nowPlayingIcon"
        android:orderInCategory="100"
        android:title="Now Playing"
        android:visible="false"
        app:showAsAction="always"
        android:icon="@drawable/ic_music" />

    <item
        android:id="@+id/context_menu_settings"
        android:orderInCategory="100"
        android:title="@string/settings" />

    <item
        android:id="@+id/context_menu_end"
        android:icon="@drawable/ic_cancel"
        android:orderInCategory="100"
        android:title="@string/end" />

</menu>
